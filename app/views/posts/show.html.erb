<p id="notice"><%= notice %></p>

<%= link_to image_tag( @post.image.url(:large) ), @post.image.url %>

<h1><%= @post.title %></h1>
<p>Description: <%= @post.description %></p>

<h3>Owner details</h3>
<p>Email: <%= mail_to @post.email %></p>
<p>Phone: <%= @post.phone %></p>

<%= link_to posts_path(@post) do %><i class="fa fa-arrow-circle-left fa-2x"></i><% end %>
<%= link_to edit_post_path(@post) do %><i class="fa fa-pencil-square-o fa-2x"></i><% end %>
<%= link_to @post, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash fa-2x"></i> <% end %>
