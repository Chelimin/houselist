<button class="btn-default btn pull-left"><%= link_to 'New Post', new_post_path %></button>
<%= form_tag(search_path, :method => "get", id: "search-form") do %>
<div class="search-bar-wrapper">
  <%= text_field_tag :description, params[:description], class: 'form-control search-bar', placeholder: "Search Description" %>
  <%= submit_tag "Search", class: 'btn-default btn' %></div>
  <% end %>



<div class="guide">
      <div class="container-fluid">
         <div class="row">
            <% @posts.each do |post| %>
              <div class="col-md-4">
                <div class="thumbnail">
                  <div class="image">
                  <%= link_to (image_tag post.image.url(:medium)) %>
                  </div>
                        <h3><%= link_to post.title, post%></h3>
                        <p><%= post.description %></p>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>

<br>
