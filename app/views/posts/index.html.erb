<button class="btn-default btn"><%= link_to 'New Post', new_post_path %></button>

<div class="table-responsive">
<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tr>
    <th>Post</th>
    <th>Description</th>
    <th>Image</th>
    <th>Category</th>
  </tr>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post%></td>
        <td><%= post.description %></td>
        <td><%= link_to (image_tag post.image.url(:thumb)) %></td>
        <td><%= post.category && post.category.name %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag(search_path, :method => "get", id: "search-form") do %>
<div class="search-bar-wrapper">
<%= text_field_tag :description, params[:description], class: 'form-control search-bar', placeholder: "Search description" %>
<%= submit_tag "Search", class: 'btn-default btn' %></div>
<% end %>

</div>
